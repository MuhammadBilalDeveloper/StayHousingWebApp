                </div>
                <!-- End Sidebar -->

                <div class="clearfix"></div>

            </div>
            <!-- Sidebar -left -->

        </div>
        <!-- Left Sidebar End -->
        <!-- ============================================================== -->

        @Html.Partial("_CommonJs")


        <!-- Start Page Content here -->
        <!-- ============================================================== -->
        <div class="content-page">
            <div class="content">

                <!-- Start Content-->

                <div class="container-fluid">
                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box">
                                <div class="page-title-right">
                                    <form class="form-inline">
                                        <div class="form-group">
                                            <div class="input-group input-group-sm">
                                                <input type="text" class="form-control border-0" id="dash-daterange">
                                                <div class="input-group-append">
                                                    <span class="input-group-text bg-blue border-blue text-white">
                                                        <i class="mdi mdi-calendar-range"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <a href="javascript: void(0);" class="btn btn-blue btn-sm ml-2">
                                            <i class="mdi mdi-autorenew"></i>
                                        </a>
                                    </form>
                                </div>
                                <h4 id="pageTitle" class="page-title">@ViewBag.Title</h4>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    @RenderBody()

                </div> <!-- container -->

            </div> <!-- content -->
            <!-- Footer Start -->
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6">

                        </div>
                        <div class="col-md-6 text-right">
                            <script>document.write(new Date().getFullYear())</script> &copy; All rights reserved by <a href="https://stayhousing.co.uk/" target="_blank">Stay Housing Ltd</a>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- end Footer -->

        </div>

        <!-- ============================================================== -->
        <!-- End Page content -->
        <!-- ============================================================== -->


    </div>
    <!-- END wrapper -->

    <script>
        $.ajax({
            type: "GET",
            contentType: "application/json; charset=utf-8",
            url: "/Dashboard/LoadExpiryCertificateNotificationData",
            data: {},
            async: true,
            dataType: "json",
            success: function (results) {

                var totalNotification = 0;
                var notificationHTM = "";

                $.each(results.data, function (i, item) {
                    totalNotification += 1;
                    notificationHTM += '<a href="/Property/Details/' + item.PropertyID + '" class="dropdown-item notify-item">' +
                        '<div class="notify-icon"><i class="mdi mdi-home-city-outline font-22 avatar-title text-primary"></i></div>' +
                        '<p class="notify-details">' + item.CertificateType + '</p>' +
                        '<p class="text-muted mb-0 user-msg"><small>Certificate of ' + item.Address + ' will be expired on ' + item.ExpairyDate + '</small></p>' +
                        '</a>';

                })

                $("#totalNotification").text(totalNotification);
                $("#notificationDIV").html(notificationHTM);
            },
            error: function (jqXHR, textStatus, errorThrown) {
                toastr.error('Something went wrong!', 'Error!');
            }
        });
    </script>




</body>
</html>