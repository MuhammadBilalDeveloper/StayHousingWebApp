                </ul>
                <div class="clearfix"></div>
            </div>
        </div>
        <!-- end Topbar -->
        <!-- ========== Left Sidebar Start ========== -->


        <div class="left-side-menu">

            <div class="h-100" data-simplebar>

                <!-- User box -->
                <div class="user-box text-center">
                    <img id="topLeftImage" src="" alt="user-img" title="Mat Helme" class="rounded-circle avatar-md">
                    <div class="dropdown">
                        <a href="/UserAccount/MyAccount/" class="text-dark dropdown-toggle h5 mt-2 mb-1 d-block" data-toggle="dropdown" id="topLeftFullName"></a>

